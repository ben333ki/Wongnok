<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post</title>
    <link rel="stylesheet" href="/css/create.css">
</head>
<body>
    <%- include('../partials/header.ejs') %>
    <main>
        <section class="recipe">
            <div class="post-header">
                <label for="file-upload" class="custom-file-upload">
                    <div class="svg-container">
                        <svg class="svg-upload-image" width="400" height="275" viewBox="0 0 545 372" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0 0H545V372H0V0Z" fill="#D9D9D9"/>
                            <rect x="217.978" y="140.963" width="62.9471" height="76.5802" fill="white"/>
                            <path d="M249.45 103L314.792 152.09H184.108L249.45 103Z" fill="white"/>
                        </svg>
                    </div>
                </label>
                <input id="file-upload" type="file" accept="image/*" />
                <div class="post-info">
                    <div class="author-info">
                        <img src="images/ACS.jpg" alt="Profile" class="author-image">
                        <span class="author-name">ACS KMUTT</span>
                    </div>
                    <input type="text" id="post-topic" class="form-input" placeholder="Enter post topic">
                    <textarea id="describe" class="form-textarea" placeholder="Enter description"></textarea>
                </div>
            </div>

            <div class="ingredients-section">
                <div class="ingredients-header">
                    <span class="ingredient-title">ส่วนผสม</span>
                    <span class="amount-title">ปริมาณ</span>
                </div>
                <div id="ingredient-list" class="ingredient-list">
                    <div class="ingredient-item">
                        <input type="text" class="ingredient" placeholder="Enter ingredient">
                        <input type="text" class="amount" placeholder="Enter amount">
                        <button class="remove-ingredient">Remove</button>
                    </div>
                </div>
                <button id="add-ingredient" class="ingredient-item-add">Add Ingredient</button>
            </div>

            <div class="video-section">
                <label for="video-upload" class="custom-file-upload">
                    <svg class="svg-upload-video" width="500" height="281" viewBox="0 0 995 540" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect width="995" height="539.29" rx="8" fill="#D9D9D9"/>
                        <rect x="448.407" y="156.394" width="98.1902" height="168.226" fill="white"/>
                        <path d="M497.5 75L599.426 182.837H395.575L497.5 75Z" fill="white"/>
                    </svg>
                </label>
                <input id="video-upload" type="file" accept="video/*">
            </div>            

            <div class="steps-section">
                <h2>วิธีทำ</h2>
                <div id="step-list" class="step-list">
                    <div class="step-item">
                        <!-- ปุ่มอัพโหลดภาพ -->
                        <label for="upload-step-image" class="custom-upload-box">
                            <svg class="svg-upload-icon" width="50" height="50" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect width="24" height="24" rx="4" fill="#D9D9D9" />
                                <path d="M12 8V16M8 12H16" stroke="#000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </label>
                        <input id="upload-step-image" type="file" accept="image/*" style="display: none;">
                        
                        <!-- กล่องข้อความ -->
                        <textarea class="step-describe" placeholder="Enter step"></textarea>
            
                        <!-- ปุ่ม Remove -->
                        <button class="remove-step">Remove</button>
                    </div>
                </div>
                <button id="add-step" class="add-step-button">Add Step</button>
            </div>
            
            <div class="submit-section">
                <button class="cancel-button">Cancel</button>
                <button class="submit-button">Submit</button>
            </div>
        </section>
    </main>

    <script>
        document.getElementById('add-ingredient').addEventListener('click', function() {
            const ingredientList = document.getElementById('ingredient-list');
            const newItem = document.createElement('div');
            newItem.classList.add('ingredient-item');
            newItem.innerHTML = `
                <input type="text" class="ingredient" placeholder="Enter ingredient">
                <input type="text" class="amount" placeholder="Enter amount">
                <button class="remove-ingredient">Remove</button>
            `;
            newItem.querySelector('.remove-ingredient').addEventListener('click', function() {
                newItem.remove();
            });
            ingredientList.appendChild(newItem);
        });

        document.getElementById('add-step').addEventListener('click', function() {
            const stepList = document.getElementById('step-list');
            const newStep = document.createElement('div');
            newStep.classList.add('step-item');
            newStep.innerHTML = `
                <textarea class="step-describe" placeholder="Enter step"></textarea>
                <button class="remove-step">Remove</button>
            `;
            newStep.querySelector('.remove-step').addEventListener('click', function() {
                newStep.remove();
            });
            stepList.appendChild(newStep);
        });

        document.getElementById('submit-post').addEventListener('click', function() {
            alert('Post submitted successfully!'); // Replace with form submission logic
        });
    </script>
</body>
</html>
