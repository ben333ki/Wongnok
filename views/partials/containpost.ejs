<div class="containpost">
  <% posts.forEach(post => { %>
    <div class="recipe-card">
      <a href="/main/user/post/<%= post._id %>"><img src="/uploads/<%= post.post_picture.split('\\').pop() %>" alt="<%= post.post_topic %>" class="recipe-image" /></a>
      <div class="recipe-details">
        <p class="chef-name"><%= post.createdBy.profile_name %></p>
        <a href="/main/user/post/<%= post._id %>"><h3 class="recipe-title"><%= post.post_topic %></h3></a>
        <div class="recipe-rating">
          <% for (let i = 0; i < Math.floor(post.avg_score); i++) { %>
            <span class="star">★</span>
          <% } %>
          <% for (let i = 0; i < 5 - Math.floor(post.avg_score); i++) { %>
            <span class="star">☆</span>
          <% } %>
          <span class="rating-count"> (<%= post.rating_count || 0 %> ratings)</span>
        </div>
      </div>
      <button class="favorite-button">♥</button>
    </div>
  <% }) %>
</div>