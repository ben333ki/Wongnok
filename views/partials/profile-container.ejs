<div class="profile-container">
    <!-- Logo and Name Section -->
    <div class="logo-name">
        <div class="logo">
            <img src="<%= user.profile_picture %>" alt="<%= user.profile_name %>">
        </div>
        <div class="name-edit">
            <h2><%= user.profile_name %></h2>
            <button onclick="window.location.href='/main/user/profile/edit'">Edit</button>
            <button id="logout" onclick="window.location.href='/logout'">log out</button>
        </div>
    </div>

    <!-- Followers and Posts Section -->
    <div class="stats">
        <div class="stat">
            <span>10</span>
            <p>followers</p>
        </div>
        <div class="stat">
            <span>10</span>
            <p>posts</p>
        </div>
    </div>

    <!-- Description Section -->
    <div class="description">
        <p><%= user.user_bio || 'No bio provided.' %></p>
    </div>
</div>
